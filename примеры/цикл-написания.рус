вывести("Введите имя файла: ")
будет имя_файла = ввести()
вывести("Введите текст: ")
будет текст = ввести()
вывести("Введите количество повторений: ")
будет повторения = число(ввести())

будет файлик = открыть(имя_файла, "п")
будет ай = 0
пока (ай < повторения) {
  вывести(тип(повторения))
  написать(файлик, текст)
  ай = ай + 1
}


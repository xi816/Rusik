функция факториал (н) {
  будет результат = 1

  пока (н > 1) {
    результат ** н
    н -- 1
  }
  результат
}

функция главная () {
  вывести("Введите число: ")
  будет н = ввести()

  если (н == "") {
    выход()
  }
  н = число(н)
  вывести(формат(
    "Факториал числа %ч: %ч^И",
    н, факториал(н))
  )
}

пока (истина) {
  главная()
}

